<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="20"
    android:background="@color/white"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/sign_dog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_back_pressed"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:text="회원가입"
            android:fontFamily="@font/jalnan"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/editText_dogname"
            android:hint="반려견 이름 *"
            android:background="@color/white"
            android:layout_marginBottom="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/dog_spinner"
            android:hint="견종 *"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_dogtype"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="견종 *"
                android:background="@color/white"
                android:layout_marginBottom="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/born_button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="OnClickHandler"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:src="@drawable/calendar_image"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/born_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:hint="날짜 정보" />
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp">

        <RadioButton
            android:id="@+id/rg_female"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="암컷" />

        <RadioButton
            android:text="수컷"
            android:id="@+id/rg_male"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rg_neuterfemale"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="암컷\n(중성화)" />

        <RadioButton
            android:text="수컷\n(중성화)"
            android:id="@+id/rg_neutermale"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/textView_result" />

        <!-- background 색상 설정이 안먹어서 이걸로 함 -->
        <android.widget.Button
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="확인"
            android:fontFamily="@font/jalnan"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>